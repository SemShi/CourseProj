@{
    ViewData["Title"] = "Визуализация";
    Layout = "_Layout";
}

<div class="row">
  <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
    <div class="position-sticky pt-3">
      <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 text-muted">
        <span>Меню</span>
      </h6>
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page">
            <span data-feather="bar-chart-2"></span>
            Визуализация
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-controller="Dashboard" asp-action="About">
            <span data-feather="layers"></span>
            О программе
          </a>
        </li>
      </ul>
      
      @if (ViewBag.model is not null)
      {
        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
          <span>Ваши дата-сеты</span>
        </h6>
        <ul class="nav flex-column mb-2">
        @foreach (var item in ViewBag.model)
          {
            <li class="nav-item">
              <a class="nav-link">
                <button onclick="ShowSelectedFile(true, '@item.FileName','@item.FilePath')" style="padding: 0; border: none; background: none">
                <span data-feather="file-text"></span>
                @item.FileName
                </button>
              </a>
            </li>
          }
        </ul>
      }
    </div>
  </nav>

  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">Проверка гипотезы о законе распределения</h1>
      <div class="btn-toolbar mb-2 mb-md-0">
        
        <div class="btn-group me-2">
          <button type="button" class="btn btn-sm btn-outline-secondary"><span data-feather="bar-chart-2"></span></button>
          <button type="button" class="btn btn-sm btn-outline-secondary"><span data-feather="trending-up"></span></button>
        </div>
        <button type="button" class="btn btn-sm btn-outline-secondary me-2" onclick="ShowInput()">
                          <span data-feather="plus"></span>
                          Загрузить файл
                        </button>
        <button type="button" class="btn btn-sm btn-outline-secondary">
          <span data-feather="file"></span>
          Скачать отчет
        </button>
        <div class="btn-toolbar mb-2 mb-md-0">
          
        </div>
      </div>
    </div>
    <div class="my-4 w-100" id="uploadFile" width="900" height="380">
      <form method="post" enctype="multipart/form-data" id="form" name="formpost">
        <div class="mb-3" id="hiddenSelected" style="display: none">
          <label id="hiddenLabel" class="form-label"></label>
          <div onclick="ShowSelectedFile(false)" id="сancel" class="form-text" style="cursor: pointer">Отменить выбор файла</div>
         </div>
        <div class="mb-3" id="fileUpload">
          <label for="file" class="form-label">Загрузите файл</label>
          <input class="form-control" type="file" id="file" name="file" accept="text/csv">
          <div id="emailHelp" class="form-text">Максимальный размер файла 28 мегабайт.</div>
        </div>
        <div class="mb-3">
          <select class="form-select" id="gender" name="gender">
            <option selected disabled="disabled">Выберите пол</option>
            <option value="Male">Мужчина</option>
            <option value="Female">Женщина</option>
          </select>
        </div>
        <div class="mb-3">
          <select class="form-select" id="param" name="param">
            <option selected disabled="disabled">Выберите пераметр</option>
            <option value="Height">Рост</option>
            <option value="Weight">Вес</option>
          </select>
        </div>
        <button class="btn btn-primary" id="submit" type="submit">Визуализировать</button>
      </form>
    </div>
    <div id="charts"></div>
            @*<canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>*@

    <div id="calcResult">
      <div class="table-responsive">
             <table id="table" class="table table-striped table-sm"></table>
        </div>
    </div>
        <div id="showOtchet"></div>
        <div id="showTable">
            <table id="secondTable" class="table table-striped table-sm"></table>
        </div>
  </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js" integrity="sha384-zNy6FEbO50N+Cg5wap8IKA4M/ZnLJgzc6w2NqACZaK0u0FXfOWRRJOnQtpZun8ha" crossorigin="anonymous"></script>
<script type="module" src="~/js/VisualizeChart.js" asp-append-version="true" ></script>
<script src="~/Scripts/ShowHide.js" asp-append-version="true" ></script>